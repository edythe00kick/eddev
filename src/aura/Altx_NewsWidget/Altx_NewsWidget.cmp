<aura:component >
    <aura:attribute name="NewsHead" type="string" default=""/>
    <aura:attribute name="NewsImgIcon" type="string" default=""/>
    <aura:attribute name="NewsTitle1" type="string" default=""/>    
    <aura:attribute name="NewsTitle2" type="string" default=""/>
    <aura:attribute name="NewsTitle3" type="string" default=""/>
    <aura:attribute name="NewsTitleLink1" type="string" default=""/>
    <aura:attribute name="NewsTitleLink2" type="string" default=""/>
    <aura:attribute name="NewsTitleLink3" type="string" default=""/>
    <aura:attribute name="ButtonText" type="string" default=""/>
    <aura:attribute name="ButtonLink" type="string" default=""/>
    <div class="slds-grid slds-wrap">
        <div class="slds-col slds-size--12-of-12 NewsHead">
            {!v.NewsHead}
        </div>
        <div class="slds-col slds-size--12-of-12 NewsContent">
            <div class="slds-grid slds-wrap">
                <div class="slds-col slds-size--1-of-12">
                     <lightning:icon iconName="{!v.NewsImgIcon}"/>
                </div>
                <div class="slds-col slds-size--11-of-12 NewsTitle">
                    <a href="{!v.NewsTitleLink1}">{!v.NewsTitle1}</a>
                </div>
            </div>
        </div>
        <div class="slds-col slds-size--12-of-12 NewsContent">
            <div class="slds-grid slds-wrap">
                <div class="slds-col slds-size--1-of-12">
                    <lightning:icon iconName="{!v.NewsImgIcon}"/>
                </div>
                <div class="slds-col slds-size--11-of-12 NewsTitle">
                    <a href="{!v.NewsTitleLink2}">{!v.NewsTitle2}</a>
                </div>
            </div>
        </div>
        <div class="slds-col slds-size--12-of-12 NewsContent">
            <div class="slds-grid slds-wrap">
                <div class="slds-col slds-size--1-of-12">
                    <lightning:icon iconName="{!v.NewsImgIcon}"/>
                </div>
                <div class="slds-col slds-size--11-of-12 NewsTitle">
                    <a href="{!v.NewsTitleLink3}">{!v.NewsTitle3}</a>
                </div>
            </div>
        </div>
        <div class="slds-col slds-size--12-of-12 btnText">
            <a href="{!v.ButtonLink}">{!v.ButtonText}</a>            
        </div>
    </div>
</aura:component>